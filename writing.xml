---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
	<title>Nevan.org</title>
	<link href="http://nevan.org/atom.xml" rel="self"/>
	<link href="http://nevan.org/"/>
	<updated>{{ site.time | date_to_xmlschema }}</updated>
	<id>http://nevan.org/</id>
	<author>
		<name>Nevan Scott</name>
		<email>nfscott@gmail.com</email>
	</author>
	{% for post in site.categories.writing %}
	<entry>
		<title>{{ post.title | textilize | strip_html }}</title>
		<link href="http://nevan.org{{ post.url }}"/>
		<updated>{{ post.date | date_to_xmlschema }}</updated>
		<id>http://nevan.org{{ post.id }}</id>
		<content type="html">{{ post.content | xml_escape }}</content>
	</entry>
	{% endfor %}
</feed>